<Page x:Class="LaundryWPF.Views.ManageResources"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LaundryWPF.Views"
      mc:Ignorable="d"
      d:DesignWidth="900"
      Title="ManageResources"
      Background="White">

    <Grid Background="#f8f9fa" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="3*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
        </Grid.RowDefinitions>

        <!-- 🔹 Header -->
        <TextBlock Text="Manage Resources"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   Margin="10,0,0,10"/>

        <!-- 🔹 Search Bar -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,5,0,10">
            <TextBox Width="250"
                     Height="30"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     BorderBrush="#bdc3c7"
                     BorderThickness="1"
                     ToolTip="Enter resource name to search"/>
            <Button Content="Search"
                    Command="{Binding SearchCommand}"
                    Background="#f39c12"
                    Foreground="White"
                    Width="90"
                    Height="30"
                    Margin="5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
          Margin="0,0,0,10"
          AutoGenerateColumns="False"
          ItemsSource="{Binding Resources}"
          SelectedItem="{Binding SelectedResource, Mode=TwoWay}"
          BorderBrush="#bdc3c7"
          BorderThickness="1"
          CanUserAddRows="False"
          CanUserDeleteRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ResourceId}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="1.2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="1*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="1*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Price / Unit" Binding="{Binding PricePerUnit}" Width="1.5*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2.5*" IsReadOnly="True"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Quantity}" Value="0">
                            <Setter Property="Background" Value="#FFCCCC"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantity}" Value="1">
                            <Setter Property="Background" Value="#FFCCCC"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantity}" Value="2">
                            <Setter Property="Background" Value="#FFCCCC"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantity}" Value="3">
                            <Setter Property="Background" Value="#FFCCCC"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>


        <!-- 🔹 Input form -->
        <Border Grid.Row="3"
                Margin="0,10,0,10"
                CornerRadius="10"
                Background="White"
                BorderBrush="#dfe6e9"
                BorderThickness="1">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ID -->
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Resource ID" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.ResourceId}"
                             Width="250"
                             IsReadOnly="True"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Type -->
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="Type" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.Type, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Name -->
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Name" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.Name, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Unit -->
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="Unit" FontWeight="SemiBold"/>
                    <ComboBox Width="250"
                              Margin="0,4,0,10"
                              ItemsSource="{Binding UnitOptions}"
                              SelectedItem="{Binding TextBoxItem.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              IsEditable="False"
                              SelectedValuePath="."
                              DisplayMemberPath="."/>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Grid.Column="0" Grid.Row="2">
                    <TextBlock Text="Quantity" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Price Per Unit -->
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <TextBlock Text="Price Per Unit" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.PricePerUnit, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                    <TextBlock Text="Description" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding TextBoxItem.Description, UpdateSourceTrigger=PropertyChanged}"
                             Height="40"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Margin="0,4,0,10"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <Button Content="Add"
                            Width="90"
                            Command="{Binding AddCommand}"
                            Background="#27ae60"
                            Foreground="White"
                            Margin="5,0"/>
                    <Button Content="Update"
                            Width="90"
                            Command="{Binding UpdateCommand}"
                            Background="#2980b9"
                            Foreground="White"
                            Margin="5,0"/>
                    <Button Content="Delete"
                            Width="90"
                            Command="{Binding DeleteCommand}"
                            Background="#c0392b"
                            Foreground="White"
                            Margin="5,0"/>
                    <Button Content="Clear"
                            Width="90"
                            Command="{Binding ClearCommand}"
                            Background="#7f8c8d"
                            Foreground="White"
                            Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
