<Page x:Class="LaundryWPF.Views.Staff.update"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaundryWPF.Views.Staff"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="update">

    <Grid Background="#FFCCE5FF" Margin="10">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Chỉnh sửa"
             Grid.Row="0"
             FontSize="24"
             FontWeight="Bold"
             HorizontalAlignment="Center"
             Margin="0,10"/>


        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Form nhập liệu -->
            <StackPanel Grid.Column="0" Margin="10">

                <TextBlock Text="StaffId"/>
                <TextBox Margin="0,5"
         Text="{Binding textboxitem.StaffId, Mode=TwoWay}"
         IsReadOnly="True"/>

                <TextBlock Text="Name"/>
                <TextBox Margin="0,5"
                   Text="{Binding textboxitem.Name, Mode=TwoWay}" />

                <TextBlock Text="Phone Number"/>
                <TextBox Margin="0,5"
                   Text="{Binding textboxitem.PhoneNumber, Mode=TwoWay}"/>


                <TextBlock Text="Salary"/>
                <TextBox Margin="0,5"
                   Text="{Binding textboxitem.Salary, Mode=TwoWay}"/>
                <Button x:Name="btnUpdate"
   Content="Chỉnh sửa"
   Width="120"
   Height="30"
   Command="{Binding UpdateCommand}" />

            </StackPanel>

            <!-- Bảng dữ liệu -->
            <DataGrid Grid.Column="1"
                Margin="10"
                ItemsSource="{Binding Staffs}"
                SelectedItem="{Binding selecteditem, Mode=OneWayToSource}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="StaffId" Binding="{Binding StaffId}" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}" Width="150"/>
                    <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" Width="150"/>
                    <DataGridTextColumn Header="DayOff" Binding="{Binding DayOff}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="2" 
              Orientation="Horizontal" 
              HorizontalAlignment="Center"
              Margin="0,10">

        </StackPanel>
    </Grid>
</Page>
