<Page x:Class="LaundryWPF.Views.ServiceManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaundryWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="838" d:DesignWidth="1544"
      Title="Quản lý dịch vụ giặt ủi">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <Border Grid.Row="0" Background="#2563EB" Padding="20,15">
            <StackPanel>
                <TextBlock Text="QUẢN LÝ DỊCH VỤ GIẶT ỦI" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Thêm, sửa, xóa các dịch vụ giặt ủi" 
                          FontSize="14" Foreground="#E0E7FF" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- NỘI DUNG CHÍNH -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- DANH SÁCH DỊCH VỤ -->
            <GroupBox Grid.Column="0" Header="Danh sách dịch vụ" 
                     FontWeight="Bold" FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Thanh tìm kiếm -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Width="200" Height="30" 
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                VerticalContentAlignment="Center"
                                Padding="5"
                                ToolTip="Nhập tên dịch vụ cần tìm..."/>
                    </StackPanel>

                    <!-- Nút thao tác -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Thêm mới" Width="100" Height="35"
                               Command="{Binding CreateServiceCommand}"
                               Background="#10B981" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button Content="Xóa" Width="80" Height="35"
                               Command="{Binding DeleteServiceCommand}"
                               Background="#EF4444" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Danh sách -->
                    <DataGrid Grid.Row="2" 
                             ItemsSource="{Binding Services}"
                             SelectedItem="{Binding SelectedService}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             CanUserResizeRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             AlternatingRowBackground="#F8FAFC">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ServiceId}" 
                                              Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Tên dịch vụ" Binding="{Binding Name}" 
                                              Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Giá (VND)" Binding="{Binding PricePerUnit, StringFormat='{}{0:N0}'}" 
                                              Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Thời gian (phút)" Binding="{Binding TimeCost}" 
                                              Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="35"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#DBEAFE"/>
                                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Thông báo trạng thái -->
                    <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                              FontSize="12" Foreground="#6B7280" 
                              HorizontalAlignment="Center" VerticalAlignment="Bottom"
                              Margin="0,0,0,10" FontStyle="Italic"/>
                </Grid>
            </GroupBox>

            <!-- FORM THÔNG TIN DỊCH VỤ -->
            <GroupBox Grid.Column="2" Header="Thông tin dịch vụ" 
                     FontWeight="Bold" FontSize="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Tên dịch vụ -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Tên dịch vụ *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ValidatedTextBoxStyle}"/>
                            <TextBlock Text="{Binding NameError}" 
                                      Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>

                        <!-- Mô tả -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Mô tả" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                    Height="80" Padding="8" FontSize="13"
                                    BorderBrush="#D1D5DB" BorderThickness="1"
                                    TextWrapping="Wrap" AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                            <TextBlock Text="{Binding DescriptionError}" 
                                      Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>

                        <!-- Giá dịch vụ -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Giá dịch vụ (VND) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding PricePerUnit, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ValidatedTextBoxStyle}"/>
                            <TextBlock Text="{Binding PriceError}" 
                                      Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>

                        <!-- Thời gian thực hiện -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Thời gian thực hiện (phút) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding TimeCost, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ValidatedTextBoxStyle}"/>
                            <TextBlock Text="{Binding TimeError}" 
                                      Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>

                        <!-- Ghi chú -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="* Trường bắt buộc" 
                                      FontStyle="Italic" FontSize="12"   
                                      Foreground="#6B7280"/>
                        </StackPanel>

                        <!-- Nút thao tác -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Button Content="Lưu" Width="100" Height="40"
                                   Command="{Binding SaveServiceCommand}"
                                   Background="#059669" Foreground="White" 
                                   FontWeight="Bold" FontSize="13"/>
                        </StackPanel>

                        <!-- Thông tin hiển thị -->
                        <Border Margin="0,20,0,0" Padding="15" 
                               Background="#F3F4F6" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Thông tin hiển thị" 
                                          FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="ID: " FontWeight="SemiBold" Width="120"/>
                                    <TextBlock Text="{Binding SelectedService.ServiceId}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Tên: " FontWeight="SemiBold" Width="120"/>
                                    <TextBlock Text="{Binding SelectedService.Name}" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Giá: " FontWeight="SemiBold" Width="120"/>
                                    <TextBlock Text="{Binding SelectedService.PricePerUnit, StringFormat='{}{0:N0} VND'}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Thời gian: " FontWeight="SemiBold" Width="120"/>
                                    <TextBlock Text="{Binding SelectedService.TimeCost, StringFormat='{}{0} phút'}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
