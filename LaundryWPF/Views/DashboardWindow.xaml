<Window x:Class="LaundryWPF.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaundryWPF.Views"
        mc:Ignorable="d"
        Title="DashboardWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="1.5*"/>
            <ColumnDefinition Width="8.5*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== SIDEBAR ===== -->
        <Border Background="#1E293B" Grid.Column="0">
            <DockPanel>
                <!-- Nút thu/phóng -->
                <Button x:Name="BtnToggle"
                        Content="⮜"
                        DockPanel.Dock="Top"
                        Height="40"
                        Background="#0F172A"
                        Foreground="White"
                        FontSize="16"
                        Click="BtnToggle_Click"/>

                <!-- Danh sách menu -->
                <StackPanel DockPanel.Dock="Top" Margin="10">

                    <Button Content="🏠 Trang chủ" Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnHome_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"
                      HorizontalContentAlignment="Left"/>

                    <Button Content="🧺 Quản lí đơn"  Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnSettings_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"  
                      HorizontalContentAlignment="Left"/>

                    <Button Content="👤 Quản lí nhân sự" Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnAbout_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"      
                      HorizontalContentAlignment="Left"/>

                    <Button Content="🛎 Quản lí dịch vụ" Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnAbout_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"      
                      HorizontalContentAlignment="Left"/>

                    <Button Content="🧰 Quản lí tài nguyên" Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnAbout_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"      
                      HorizontalContentAlignment="Left"/>

                    <Button Content="🦹🏻 Quản lí khách hàng" Height="30" Width="160"
                      Style="{StaticResource {x:Type Button}}"
                      Click="BtnAbout_Click"
                      Margin="0,5"
                      Background="Transparent"
                      Foreground="White"
                      HorizontalAlignment="Left"      
                      HorizontalContentAlignment="Left"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ===== PHẦN NỘI DUNG ===== -->
        <Frame x:Name="MainFrame"
                 Grid.Column="1"
       NavigationUIVisibility="Hidden"
       HorizontalAlignment="Stretch"
       VerticalAlignment="Stretch"
       ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>