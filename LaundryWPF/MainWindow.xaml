<Window x:Class="LaundryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaundryWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  VerticalAlignment="Center">
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="Đăng nhập bằng Mã PIN" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="PinBox" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="Blue" Width="150" Height="30" PasswordChar="x" />
                </StackPanel>
                <Button Content="Đăng nhập"
                Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="OpenLaundryWindow_Click"/>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Window>
